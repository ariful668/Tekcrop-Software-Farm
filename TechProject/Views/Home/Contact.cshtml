@model TechProject.Models.ContactPerson
@{
    ViewData["Title"] = "Contact";
}
<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="container">
                    <div class="row form_row">
                        <div class="col-sm-6 form_side">
                            <h1 class="part_title">Contact Us</h1>
                            <hr />
                            <div class="contactForm row">


                                <form asp-action="Contact" class="row" id="contactForm">
                                    <input asp-for="Name" class="form-control" placeholder="Name" required="">
                                    <input asp-for="Phone" class="form-control" placeholder="Phone Number" required="">
                                    <input asp-for="Email" class="form-control" placeholder="Email" required="">
                                    <input asp-for="Message" class="form-control" placeholder="Message" required="">
                                    <input type="submit" value="Send Message" class="btn btn-primary">
                                </form>
                            </div>
                        </div>
                        <div class="col-sm-6 detail_address">
                            <div class="media">
                                <div class="media-body media-middle">
                                    <h1>Company Address</h1><hr />
                                    <p>
                                        901 S Highland St, Room #332<br />
                                        Arlington, Va<br />
                                        22204<br />
                                        Phone: +1 703-939-2683<br />
                                        Email: lessons.net@gmail.com<br>
                                        Website: Training.tekcrop.com<br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>